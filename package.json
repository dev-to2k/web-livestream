{
  "name": "live-stream-scalable-platform",
  "version": "2.0.0",
  "description": "High-performance scalable live streaming platform supporting 1000+ concurrent users",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "test:load": "artillery run load-test.yml",
    "test:load-quick": "artillery quick --count 100 --num 10 ws://localhost:4000/socket.io/?EIO=4&transport=websocket",
    "test:performance": "bash validate-performance.sh",
    "test:stress": "artillery run load-test.yml --overrides '{\"config\":{\"phases\":[{\"duration\":300,\"arrivalRate\":1500}]}}'",
    "test:spike": "artillery run load-test.yml --overrides '{\"config\":{\"phases\":[{\"duration\":60,\"arrivalRate\":100,\"rampTo\":2000}]}}'",
    "setup:complete": "bash setup.sh setup",
    "setup:start": "bash setup.sh start",
    "setup:stop": "bash setup.sh stop",
    "setup:restart": "bash setup.sh restart",
    "setup:status": "bash setup.sh status",
    "setup:cleanup": "bash setup.sh cleanup",
    "metrics:prometheus": "open http://localhost:9090",
    "metrics:grafana": "open http://localhost:3001",
    "health:check": "curl -f http://localhost:5000/api/health",
    "health:metrics": "curl -f http://localhost:5000/metrics",
    "validate:all": "npm run health:check && npm run test:performance",
    "validate:quick": "npm run health:check && npm run test:load-quick"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "artillery": "^2.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.0",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "live-streaming",
    "websocket",
    "webrtc",
    "scalable",
    "nodejs",
    "socket.io",
    "mediasoup",
    "redis",
    "mongodb",
    "docker",
    "kubernetes",
    "microservices",
    "real-time",
    "high-performance"
  ],
  "author": {
    "name": "Live Streaming Platform Team",
    "email": "team@livestream.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/company/live-stream-platform.git"
  },
  "config": {
    "target_users": 1000,
    "max_latency_ms": 100,
    "min_uptime_percent": 99.9,
    "max_error_rate_percent": 1
  }
}
