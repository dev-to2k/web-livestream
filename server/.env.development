# Development Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5000
SERVER_ID=dev-server
CLUSTER_ENABLED=false
MAX_CONNECTIONS=100
ROOM_SHARD_RANGE=0-999

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/livestream-dev
MONGODB_OPTIONS=

# Redis Configuration
REDIS_CLUSTER_URLS=localhost:6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (more relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# WebRTC Configuration
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_SERVERS=

# SFU Configuration
SFU_ENABLED=false
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40100

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Security (development keys - change in production)
JWT_SECRET=dev-jwt-secret-key
BCRYPT_ROUNDS=6

# Performance
ENABLE_CLUSTERING=false
WORKER_MEMORY_LIMIT=512
GC_CONCURRENT=false

# Feature Flags
ENABLE_BINARY_PROTOCOL=false
ENABLE_MESSAGE_BATCHING=false
ENABLE_ADAPTIVE_BITRATE=false
ENABLE_ANALYTICS=true