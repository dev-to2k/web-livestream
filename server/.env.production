# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=5000
SERVER_ID=auto
CLUSTER_ENABLED=true
CLUSTER_WORKERS=auto
MAX_CONNECTIONS=1000
ROOM_SHARD_RANGE=0-999

# Database Configuration
MONGODB_URI=mongodb://mongodb-primary:27017,mongodb-secondary:27017/livestream?replicaSet=rs0
MONGODB_OPTIONS=retryWrites=true&w=majority

# Redis Configuration
REDIS_CLUSTER_URLS=redis-cluster-1:6379,redis-cluster-2:6380,redis-cluster-3:6381
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebRTC Configuration
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_SERVERS=

# SFU Configuration
SFU_ENABLED=true
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40100

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# Performance
ENABLE_CLUSTERING=true
WORKER_MEMORY_LIMIT=1024
GC_CONCURRENT=true

# Feature Flags
ENABLE_BINARY_PROTOCOL=true
ENABLE_MESSAGE_BATCHING=true
ENABLE_ADAPTIVE_BITRATE=true
ENABLE_ANALYTICS=true